{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "outDir": "dist",
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
} 